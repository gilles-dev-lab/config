<!--

  configSource ne fonctionne que si :
    - La section est déclarée dans <configSections>  
    ou
    La section supporte explicitement configSource (comme appSettings ou connectionStrings)
    + <configSections> <section name="monEntree" type="..." /> </configSections> <monEntree configSource="config/monEntree.config" />
-->
<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <!-- Déclaration des sections si nécessaire -->
  <configSections>
    <!-- Rien de spécial ici pour appSettings ou connectionStrings -->
  </configSections>

  <!-- Technique 1 : appSettings avec surcharge possible -->
  <appSettings file="configuration/files/appsettings.config">
    <!-- Ces clés ÉCRASENT celles du fichier externe -->
    <add key="ApplicationName" value="MonSite en PROD" />
  </appSettings>

  <!-- Technique 2 : configSource = remplacement total -->
  <connectionStrings configSource="configuration/files/connectionStrings.config" />

  <system.web>
    <compilation debug="false" targetFramework="4.8" />
    <httpRuntime targetFramework="4.8" />
  </system.web>

</configuration>
